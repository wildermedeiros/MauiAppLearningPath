<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppLearningPath.Views.MainPage">
    <Grid 
        RowDefinitions="6*, *"
        RowSpacing="6"
        Margin="10">
        
        <Editor
            Grid.Row="0"
            x:Name="NoteDescriptionEditor" 
            Placeholder="Express yourself" 
            Keyboard="Chat"/>

        <Button
            Grid.Row="1"
            Text="Send"
            Clicked="NoteDescriptionEditorOnClicked">
            
        </Button>
    </Grid>    
</ContentPage>
