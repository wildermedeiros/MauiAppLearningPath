<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppLearningPath.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiAppLearningPath.Views"
    Title="Silicon Village Challenge App">

    <TabBar>
        <Tab Title="Write" Icon="{OnPlatform 'icons_note.png'}" >
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>

        <Tab Title="Writing records" Icon="{OnPlatform 'icons_moleskine.png'}" >
            <ShellContent ContentTemplate="{DataTemplate views:RecordBook}" />
        </Tab>

    </TabBar>

</Shell>
